{
  "name": "@haorama/nestjs-mailer",
  "version": "0.2.0",
  "description": "Nestjs mailer module",
  "keywords": [
    "nestjs",
    "mailer",
    "mailing",
    "mail",
    "mail service",
    "typescript",
    "nodemailer"
  ],
  "author": {
    "name": "Michael Lazuardy"
  },
  "repository": {
    "url": "https://github.com/haorama/nestjs-mailer",
    "type": "git"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && nest build",
    "test:e2e": "jest --config ./tests/jest-e2e.json --runInBand --detectOpenHandles --forceExit"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "nodemailer": "^6.9.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.1",
    "@nestjs/common": "^11.0.8",
    "@nestjs/core": "^11.0.8",
    "@nestjs/platform-express": "^11.0.8",
    "@nestjs/testing": "^11.0.8",
    "@types/jest": "^29.5.14",
    "@types/nodemailer": "^6.4.17",
    "jest": "^29.7.0",
    "nodemailer": "^6.10.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
